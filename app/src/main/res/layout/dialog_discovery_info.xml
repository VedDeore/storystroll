<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardCornerRadius="16dp"
  app:strokeWidth="2dp"
  app:strokeColor="#484a48"
  android:layout_gravity="center"
  app:cardElevation="8dp"
  android:backgroundTint="@color/light_purple">

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fillViewport="true">

        <LinearLayout
          android:orientation="vertical"
          android:padding="16dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

            <!-- Top Row: Title (center), Bookmark & Close (right) -->
            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="12dp">

                <ImageView
                  android:id="@+id/btnBookmark"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:padding="5dp"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:contentDescription="@string/save_the_treasure"
                  android:src="@android:drawable/btn_star_big_off"
                  android:layout_alignTop="@id/tvTreasureTitle"
                  android:layout_centerVertical="true"
                  android:layout_alignParentStart="true" />

                <TextView
                  android:id="@+id/tvTreasureTitle"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/treasure_title"
                  android:textStyle="bold"
                  android:textSize="25sp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:layout_centerInParent="true"
                  android:layout_toEndOf="@id/btnBookmark"
                  android:layout_toStartOf="@id/btnClose"
                  android:layout_marginHorizontal="8dp" />

                <ImageView
                  android:id="@+id/btnClose"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:padding="5dp"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:contentDescription="@string/close"
                  android:src="@drawable/ic_close"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <!-- Info Text Container -->
            <LinearLayout
              android:id="@+id/infoBoxContainer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_info_blue_box"
              android:padding="12dp"
              android:layout_marginBottom="10dp"
              android:orientation="vertical"
              android:layout_gravity="center_horizontal">

                <TextView
                  android:id="@+id/tvDiscoveryInfo"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/treasure_info"
                  android:textSize="15sp"
                  android:textColor="@android:color/black"
                  android:textAlignment="center" />

            </LinearLayout>

            <!-- Treasure Image -->
            <com.google.android.material.card.MaterialCardView
              android:id="@+id/imageCard"
              android:layout_width="match_parent"
              android:layout_height="180dp"
              app:cardCornerRadius="12dp"
              app:cardElevation="0dp"
              android:layout_marginBottom="12dp">

                <ImageView
                  android:id="@+id/discoveryImage"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:scaleType="fitCenter"
                  android:contentDescription="@string/treasure_image"
                  android:src="@drawable/ic_image_placeholder"
                  android:background="@drawable/bg_image_rounded"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Treasure Description -->
            <TextView
              android:id="@+id/tvTreasureDesc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/treasure_description"
              android:textSize="16sp"
              android:layout_marginBottom="12dp" />

        </LinearLayout>

    </ScrollView>

</com.google.android.material.card.MaterialCardView>